<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.proyectofinal.code2chart.CrearDiagrama">

    <TextView
        android:id="@+id/detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles"
        android:textColor="@color/colorBackground"
        android:textSize="18dp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="245dp"/>

    <TextView
        android:id="@+id/elegir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir archivo"
        android:textColor="@color/colorBackground"
        android:textSize="18dp"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/obtenerUri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="..."
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/eliminarUri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@android:drawable/ic_delete"
        android:textSize="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/uri"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:text="Seleccionar archivo"
        android:gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/iconoTipo"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/nada_logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="185dp"/>

    <EditText
        android:id="@+id/nombreTitulo"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:singleLine="true"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/nombreAutor"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="14dp"
        android:maxLength="25"/>

    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="115dp"/>

    <EditText
        android:id="@+id/nombreAutor"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:singleLine="true"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="105dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:maxLength="25"/>

    <Button
        android:id="@+id/generar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar"
        android:textAllCaps="false"
        android:background="@color/colorAccent"
        android:textColor="@color/colorBackground"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="o colocar GitHub url"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"/>

    <EditText
        android:id="@+id/url"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimaryDark" />

    <com.mindfusion.diagramming.DiagramView
        android:id="@+id/diag_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>

</RelativeLayout>
